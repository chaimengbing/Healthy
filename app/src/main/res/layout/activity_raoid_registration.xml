<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.health.infrared.activity.infraredpic.RapidRegistrationActivity">

    <include layout="@layout/custom_toolbar" />

    <include layout="@layout/login_user_custom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rapid_img_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x300"
            android:layout_margin="@dimen/x10"
            android:layout_weight="1"
            android:src="@mipmap/rapid_1" />

        <ImageView
            android:id="@+id/rapid_img_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x300"
            android:layout_margin="@dimen/x10"
            android:layout_weight="1"
            android:src="@mipmap/rapid_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rapid_img_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x300"
            android:layout_margin="@dimen/x10"
            android:layout_weight="1"
            android:src="@mipmap/rapid_3" />

        <ImageView
            android:id="@+id/rapid_img_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x300"
            android:layout_margin="@dimen/x10"
            android:layout_weight="1"
            android:src="@mipmap/rapid_4" />

    </LinearLayout>


</LinearLayout>
