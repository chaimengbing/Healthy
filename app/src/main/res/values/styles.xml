<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


    <style name="comm_edit_style">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/x3</item>
        <item name="android:paddingTop">@dimen/x10</item>
        <item name="android:paddingBottom">@dimen/x10</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_margin">@dimen/x10</item>
        <item name="android:background">@drawable/free_rounded</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="comm_edit_no_margin_style">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">@dimen/x10</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/free_rounded</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>


</resources>
